import installations from './installations.js'

export const formatInstallations = ( input ) => {

    const output = [''];
    output.pop;
    input.array.forEach(element => {
        const currentElement = installations.find(({ name }) => name === element);
        if(currentElement){
            output.push(currentElement.output + '\n');
        }
    });

    return `## Installation\n\n${output}\n`;
    
}

export default formatInstallations;